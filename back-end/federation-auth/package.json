{
  "name": "federation-auth",
  "version": "1.0.0",
  "description": "GQL microservice project structure with prisma, codegen, apolloserver and typescript",
  "main": "index.js",
  "repository": "",
  "author": "Emanuele Moricci",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.prod.json",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest unit",
    "test:integration": "dotenv -e ./.env.test yarn generate:reset && dotenv -e ./.env.test jest int -i",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint --fix .",
    "generate": "graphql-codegen --config codegen.yml",
    "generate:seed": "npx prisma db seed",
    "generate:migration": "npx prisma migrate dev",
    "generate:reset": "npx prisma migrate reset --force",
    "prisma:studio": "npx prisma studio",
    "test:environment:docker": "yarn docker:up && yarn docker:test:run & yarn docker:down",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker compose down",
    "docker:test:run": "docker exec server ./bin/wait-for-it.sh db:5432 -- yarn test"
  },
  "prisma": {
    "seed": "ts-node prisma/db/seeder.ts"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@types/dotenv-safe": "^8.1.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.15",
    "nodemon": "^2.0.7",
    "plop": "^2.7.6",
    "prettier": "^2.2.1",
    "prisma": "^3.3.0",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@graphql-codegen/core": "^1.17.10",
    "@graphql-codegen/plugin-helpers": "^1.18.7",
    "@graphql-codegen/schema-ast": "^1.18.3",
    "@prisma/client": "^3.3.0",
    "apollo-graphql": "^0.9.3",
    "apollo-server": "^2.25.1",
    "apollo-server-express": "^2",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "dotenv-cli": "^4.0.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1"
  }
}
